<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/liner_item_shape"
    android:layout_margin="5dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="40dp">

        <TextView
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="16dp"
            android:text="宠物名称："
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/txtPetName"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="16dp"
            android:text=""
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="40dp">

        <TextView
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="16dp"
            android:text="状态："
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/txtStatus"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="16dp"
            android:text=""
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lnInfo"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/lblNote"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="16dp"
            android:text=""
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/lblTime"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="16dp"
            android:text="时间："
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/txtCreateTime"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="16dp"
            android:text=""
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lnButton"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="10dp"
        android:gravity="center"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnNoIll"
            android:layout_marginLeft="2dp"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:textSize="10dp"
            android:background="@drawable/btn_bg_default"
            android:textColor="@color/white"
            android:layout_marginRight="2dp"
            android:text="不接受治疗">
        </Button>
        <Button
            android:id="@+id/btnIll"
            android:layout_marginLeft="2dp"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:textSize="10dp"
            android:background="@drawable/btn_bg_default"
            android:textColor="@color/white"
            android:layout_marginRight="2dp"
            android:text="接受治疗">
        </Button>
    </LinearLayout>
</LinearLayout>